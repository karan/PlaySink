// base layout
// shows a signup/signin navbar for non-logged in user

doctype html
html
	include ../includes/head

	div.container
		body.dropdown-index
			div.navbar.navbar-inverse.navbar-fixed-top
				div.container
					div.navbar-header
						a(href='/').navbar-brand #{appName}
					div.navbar-collapse
						if user
							ul.nav.navbar-nav.navbar-right
								// logged in users see this
								li
									a(href="/dashboard") Dashboard
								li
									a(href="/userlist") User List
								li
									a(href="/profile") Profile
								li
									a(href="/logout") Logout
						else
							ul.nav.navbar-nav.navbar-right
								li
									a(href="/signup") Sign up
								li.dropdown
									a.dropdown-toggle(href="/signin", data-toggle="dropdown") Sign in
										b.caret
									ul.dropdown-menu(style="padding: 15px;min-width: 250px;")
										li
											div.row
												div.col-md-12
													form.form#login-nav(name="signin", method="post", action="/signin")
														div.form-group
															input.form-control(type="text", placeholder="Username", name="username", required=true, autofocus=true)
														div.form-group
															input.form-control(type="password", placeholder="Password", name="userpassword", required=true)
														div.checkbox
															label Remember me
																input(type="checkbox")
														div.form-group
															button.btn.btn-success.btn-block(type="submit") Sign in
										li.divider
										li
											include ../users/oauth
			block content
	include ../includes/foot