// layout for homepage with simple form in navbar

doctype html
html
	include ../includes/head

	body
		div.navbar.navbar-inverse.navbar-fixed-top
			div.container
				div.navbar-header
					a(href='/').navbar-brand #{appName}
				div.collapse.navbar-collapse
					if user
						ul.nav.navbar-nav.navbar-right
							// logged in users see this
							li
								a(href="/dashboard") Dashboard
							li
								a(href="/userlist") User List
							li
								a(href="/profile") Profile
							li
								a(href="/logout") Logout
					else
						ul.nav.navbar-nav.navbar-right
							li
								a(href="/signup") Sign Up
							form.navbar-form.navbar-right(name="signin", method="post", action="/signin")
								div.form-group
									input.form-control(type="text", placeholder="Username", name="username", required=true, autofocus=true)
								div.form-group
									input.form-control(type="password", placeholder="Password", name="userpassword", required=true)
								div.form-group.col-sm-offset-2.col-sm-10
									div.controls.controls-row
										label.checkbox Remember me
											input(type="checkbox", value="remember-me")
											button.btn-link Forgot Password?
								button.btn.btn-primary
									btnSubmit(type="submit") Login
		block content
	include ../includes/foot